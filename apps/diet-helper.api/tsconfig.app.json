{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": [
      "node"
    ],
    "emitDecoratorMetadata": true,
    "target": "es2021",
    "baseUrl": "./",
    "paths": {
      "@domain/*": ["./src/app/domain/*"],
      "@application/*": ["./src/app/application/*"],
      "@infrastructure/*": ["./src/app/infrastructure/*"],
      "@presentation/*": ["./src/app/presentation/*"],
      "@shared/*": ["./src/app/shared/*"]
    }
  },
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
